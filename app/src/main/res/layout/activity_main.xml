<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/notice"
        android:layout_width="280dp"
        android:layout_height="160dp"
        android:src="@mipmap/notice"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/schoolNotice"
        android:text="@string/schoolNotice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/schoolNoticeText"
        android:layout_width="wrap_content"
        android:text="接到学校上级通知，下周不上课。"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:layout_margin="6dp"
        android:layout_below="@id/schoolNotice"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:id="@+id/mainFirstName"
        android:text="@string/mainFirstName"
        android:layout_width="wrap_content"
        android:layout_below="@id/notice"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_margin="2dp"
        android:background="#F1F3F4"
        android:id="@+id/mainBottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/index"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/index"/>
        <TextView
            android:text="@string/index"
            android:textSize="10sp"
            android:layout_marginLeft="27dp"
            android:layout_below="@id/index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="60dp">
            <Button
                android:id="@+id/school"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="30dp"
                android:background="@mipmap/school" />


            <TextView
                android:text="校园圈"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_below="@id/school"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/book"
                android:layout_width="32dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="30dp"
                android:background="@mipmap/book"
                android:layout_toRightOf="@id/school"
                android:layout_height="32dp" />
            <TextView
                android:text="订单"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_below="@id/book"
                android:layout_marginLeft="36dp"
                android:layout_toRightOf="@id/school"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <Button
            android:id="@+id/myself"
            android:layout_alignParentRight="true"
            android:background="@mipmap/myself"
            android:layout_width="32dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:layout_height="32dp" />

        <TextView
            android:text="@string/mySelf"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp"
            android:layout_below="@id/myself"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main"
        android:layout_marginTop="10dp"
        android:layout_below="@id/mainFirstName"
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <ScrollView
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="280dp">
            <RelativeLayout
                android:id="@+id/One"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/first"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/first"/>
                <TextView
                    android:id="@+id/firstName"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/first"
                    android:layout_height="wrap_content"
                    android:text="@string/first"/>

                <Button
                    android:id="@+id/second"
                    android:layout_width="74dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/second"/>
                <TextView
                    android:id="@+id/secondName"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/second"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/second"/>
                <Button
                    android:id="@+id/third"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/third"/>

                <TextView
                    android:id="@+id/thirdName"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/third"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/third"/>

                <Button
                    android:id="@+id/fourth"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/firstName"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/express"/>
                <TextView
                    android:id="@+id/fourthName"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/fourth"
                    android:layout_height="wrap_content"
                    android:text="@string/fourth"/>

                <Button
                    android:id="@+id/fifth"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/secondName"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/market"/>
                <TextView
                    android:id="@+id/fifthName"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/fourth"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/fifth"/>

                <Button
                    android:id="@+id/sixth"
                    android:layout_width="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/secondName"
                    android:background="@mipmap/sixth"/>

                <TextView
                    android:id="@+id/sixthName"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/sixth"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/sixth"/>

                <Button
                    android:id="@+id/seventh"
                    android:layout_below="@id/fourthName"
                    android:layout_width="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/car"/>
                <TextView
                    android:id="@+id/seventhName"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/seventh"
                    android:layout_height="wrap_content"
                    android:text="@string/seventh"/>

                <Button
                    android:id="@+id/eighth"
                    android:layout_below="@id/fifthName"
                    android:layout_width="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/libra"/>
                <TextView
                    android:id="@+id/eighthName"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/eighth"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/eighth"/>

                <Button
                    android:id="@+id/ninth"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/sixthName"
                    android:background="@mipmap/play"/>

                <TextView
                    android:id="@+id/ninthName"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/ninth"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/ninth"/>
            </RelativeLayout>


        </ScrollView>

    </RelativeLayout>



    <TextView
        android:id="@+id/wallTxt"
        android:text="墙墙联合"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/main"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

<ImageView
    android:id="@+id/wallNotice"
    android:background="@mipmap/mainnotice"
    android:layout_below="@id/main"
    android:layout_toRightOf="@id/wallTxt"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="4dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@id/main"
        android:layout_toRightOf="@id/wallNotice"
        android:layout_width="250dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/wallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="河南财经政法大学挑战杯已经开始比赛了，大家赶紧报名啊"
            android:textColor="#D81B60"
            android:scrollHorizontally="true"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wallBut"
        android:layout_margin="20dp"
        android:layout_below="@id/wallTxt"
        android:layout_above="@id/mainBottom"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <Button
            android:id="@+id/love"
            android:background="@mipmap/love"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/find"
            android:background="@mipmap/find"
            android:layout_width="60dp"
            android:layout_centerHorizontal="true"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/talk"
            android:background="@mipmap/talk"
            android:layout_width="60dp"
            android:layout_alignParentRight="true"
            android:layout_height="60dp" />
    </RelativeLayout>
</RelativeLayout>