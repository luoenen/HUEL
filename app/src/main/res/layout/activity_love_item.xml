<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/loveIcon"
        android:layout_margin="20dp"
        android:layout_width="160dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/loveSchool"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="#EE0000"
        android:text="河南财经政法大学"
        android:layout_toRightOf="@id/loveIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/loveName"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="#0000EE"
        android:text="姓名"
        android:layout_below="@id/loveSchool"
        android:layout_toRightOf="@id/loveIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/loveTell"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="#0000EE"
        android:text="电话"
        android:layout_below="@id/loveName"
        android:layout_toRightOf="@id/loveIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/loveDesc"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:textColor="#EE1289"
        android:layout_below="@id/loveIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>