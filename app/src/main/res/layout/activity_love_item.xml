<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/loveIcon"
        android:layout_margin="6dp"
        android:layout_width="160dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/myName"
        android:text="我的名字："
        android:layout_marginTop="16dp"
        android:layout_below="@id/mySchool"
        android:layout_toRightOf="@id/loveIcon"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/loveSchool"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:textColor="#DC143C"
        android:text="河南财经政法大学"
        android:layout_toRightOf="@id/mySchool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/mySchool"
        android:text="我的学校："
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/loveIcon"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/loveName"
        android:layout_marginTop="16dp"
        android:textSize="15sp"
        android:textColor="#B23AEE"
        android:text="姓名"
        android:layout_below="@id/loveSchool"
        android:layout_toRightOf="@id/myName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/myTell"
        android:text="联系方式："
        android:layout_marginTop="16dp"
        android:layout_below="@id/loveName"
        android:layout_toRightOf="@id/loveIcon"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/loveTell"
        android:layout_marginTop="16dp"
        android:textSize="13sp"
        android:textColor="#C1C1C1"
        android:text="电话"
        android:layout_below="@id/loveName"
        android:layout_toRightOf="@id/myTell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/myDesc"
        android:text="我遇见Ta，想说的话："
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_margin="6dp"
        android:layout_marginLeft="4dp"
        android:layout_below="@id/loveIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/loveDesc"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textSize="14sp"
        android:layout_below="@id/myDesc"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>